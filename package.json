{
  "name": "klaude",
  "version": "0.1.1",
  "description": "TypeScript CLI wrapper for Claude Agent SDK with multi-agent session management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "klaude": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "postinstall": "node dist/setup-hooks.js || true",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "agent",
    "cli",
    "sdk"
  ],
  "author": "Silas Rhyneer <silas@rhyneerconsulting.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CaptainCrouton89/klaude.git"
  },
  "homepage": "https://github.com/CaptainCrouton89/klaude#readme",
  "bugs": {
    "url": "https://github.com/CaptainCrouton89/klaude/issues"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.28",
    "@r-cli/sdk": "^1.1.115",
    "better-sqlite3": "^12.4.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "js-yaml": "^4.1.0",
    "sql.js": "^1.13.0",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
