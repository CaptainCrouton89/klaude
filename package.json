{
  "name": "klaude",
  "version": "0.1.0",
  "description": "TypeScript CLI wrapper for Claude Agent SDK with multi-agent session management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "klaude": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias && npm unlink -g klaude 2>/dev/null || true && npm link",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "agent",
    "cli",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.0.x",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0",
    "sql.js": "^1.10.0",
    "table": "^6.8.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
